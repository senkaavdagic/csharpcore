<Page
    x:Class="FluentUwpApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentUwpApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="590" Height="286">

    <StackPanel Background="{ThemeResource SystemControlAcrylicWindowBrush}" HorizontalAlignment="Left" Width="590">
        <StackPanel x:ConnectionId='2' Orientation="Horizontal" Padding="4" Background="LightGray" Name="toolbar">
            <Button x:ConnectionId='3' Content="Click Me" Margin="8" Padding="6" Name="ClickMe" VerticalAlignment="Top" Height="41" Width="120"               />
            <TextBlock Text="First name: " VerticalAlignment="Center" Margin="8"/>
            <TextBox PlaceholderText="Enter your name" VerticalAlignment="Center" Width="200" Margin="8"/>
        </StackPanel>
    </StackPanel>
</Page>

